<Application x:Class="WBZ.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sec="clr-namespace:StswExpress.Controls;assembly=StswExpress"
             xmlns:seg="clr-namespace:StswExpress.Globals;assembly=StswExpress"
             xmlns:p="clr-namespace:WBZ.Properties"
             Startup="App_Startup">
    <Application.Resources>
        <Style TargetType="{x:Type sec:Header}">
            <Setter Property="IconMargin" Value="{Binding iSize, Source={x:Static p:Settings.Default}, Converter={seg:conv_Size}, ConverterParameter=0.15}"/>
            <Setter Property="IconSize" Value="{Binding iSize, Source={x:Static p:Settings.Default}, Converter={seg:conv_Size}, ConverterParameter=1.5}"/>
        </Style>
        <Style TargetType="{x:Type sec:IconButton}">
            <Setter Property="CornerRadius" Value="{Binding iSize, Source={x:Static p:Settings.Default}, Converter={seg:conv_Size}, ConverterParameter=0.15}"/>
            <Setter Property="IconMargin" Value="{Binding iSize, Source={x:Static p:Settings.Default}, Converter={seg:conv_Size}, ConverterParameter=0.15}"/>
            <Setter Property="IconSize" Value="{Binding iSize, Source={x:Static p:Settings.Default}, Converter={seg:conv_Size}, ConverterParameter=2}"/>
        </Style>
    </Application.Resources>
</Application>