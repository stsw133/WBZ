                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <sec:Header Grid.Column="0" Text="Pracownicy:" Icon="/Resources/icon32_briefcase.ico"/>
