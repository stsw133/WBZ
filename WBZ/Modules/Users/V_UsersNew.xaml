                            <CheckBox Grid.Column="2" IsChecked="{Binding InstanceInfo.Perms, Mode=OneTime, Converter={seg:conv_ListContains}, ConverterParameter=contractors_save}" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                                      Tag="contractors_save" Checked="chckPerms_Checked" Unchecked="chckPerms_Unchecked"/>
                            <CheckBox Grid.Column="3" IsChecked="{Binding InstanceInfo.Perms, Mode=OneTime, Converter={seg:conv_ListContains}, ConverterParameter=contractors_delete}" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                                      Tag="contractors_delete" Checked="chckPerms_Checked" Unchecked="chckPerms_Unchecked"/>
                            <CheckBox Grid.Column="4" IsChecked="{Binding InstanceInfo.Perms, Mode=OneTime, Converter={seg:conv_ListContains}, ConverterParameter=contractors_groups}" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                                      Tag="contractors_groups" Checked="chckPerms_Checked" Unchecked="chckPerms_Unchecked"/>
                        </Grid>
