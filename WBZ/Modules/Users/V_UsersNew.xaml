                            <CheckBox Grid.Column="4" IsChecked="{Binding InstanceInfo.Perms, Mode=OneTime, Converter={seg:conv_ListContains}, ConverterParameter=articles_groups}" HorizontalAlignment="Center" VerticalContentAlignment="Center"
