                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <sec:Header Grid.Column="0" Text="Dystrybucje:" Icon="/Resources/icon32_food.ico"/>
