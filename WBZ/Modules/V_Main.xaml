<Window x:Class="WBZ.Modules.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sec="clr-namespace:StswExpress.Controls;assembly=StswExpress"
        xmlns:seg="clr-namespace:StswExpress.Globals;assembly=StswExpress"
        xmlns:g="clr-namespace:WBZ.Globals"
        xmlns:p="clr-namespace:WBZ.Properties"
        mc:Ignorable="d"
        Title="{Binding Title}"
            Height="550" Width="825" ResizeMode="CanResize" WindowStartupLocation="CenterScreen"
            Icon="/Resources/icon64.ico"
            Loaded="Window_Loaded" Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0,0,0,1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>
    <Window.CommandBindings>
        <CommandBinding Command="seg:Commands.Close" Executed="menuClose_Executed"/>
        <CommandBinding Command="seg:Commands.Help" Executed="menuHelp_Executed"/>
        <CommandBinding Command="seg:Commands.Refresh" Executed="menuRefresh_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <!-- titleBar -->
        <sec:TitleBar DockPanel.Dock="Top"/>
        <!-- menu -->
        <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1">
            <DockPanel>
                <!-- menu -->
                <Menu BorderBrush="Gray" BorderThickness="0,0,1,0">
                    <MenuItem Header="{Tr Main.System, DefaultText='System', LanguageId={x:Static seg:Properties.Language}}" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.25}">
                        <MenuItem Header="{Tr Main.UserManual, DefaultText='Poradnik użytkownika', LanguageId={x:Static seg:Properties.Language}}" Command="seg:Commands.Help">
                            <MenuItem.Icon>
                                <Image Source="/Resources/icon32_books.ico"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="{Tr Main.Settings, DefaultText='Ustawienia', LanguageId={x:Static seg:Properties.Language}}" Click="menuSettings_Click">
                            <MenuItem.Icon>
                                <Image Source="/Resources/icon32_settings.ico"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="{Tr Main.Refresh, DefaultText='Odśwież', LanguageId={x:Static seg:Properties.Language}}" Command="seg:Commands.Refresh">
                            <MenuItem.Icon>
                                <Image Source="/Resources/icon32_refresh.ico"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{Tr Main.Logout, DefaultText='Wyloguj', LanguageId={x:Static seg:Properties.Language}}" Click="menuLogout_Click">
                            <MenuItem.Icon>
                                <Image Source="/Resources/icon32_return.ico"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="{Tr Main.CloseApp, DefaultText='Zamknij aplikację', LanguageId={x:Static seg:Properties.Language}}" Command="seg:Commands.Close">
                            <MenuItem.Icon>
                                <Image Source="/Resources/icon32_close.ico"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
                <!-- personal -->
                <Label DockPanel.Dock="Right" Content="{Binding Source={x:Static g:Global.User}, Path=Fullname}" Margin="5,0" Padding="1" VerticalContentAlignment="Center" FontWeight="Medium"/>
                <Button DockPanel.Dock="Right" HorizontalAlignment="Right" BorderThickness="1,0" ToolTip="{Tr Main.Other, DefaultText='Pozostałe', LanguageId={x:Static seg:Properties.Language}}" Click="btnOther_Click">
                    <Image Margin="2" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.75}" Source="/Resources/icon32_tools.ico"/>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="{Tr Main.Profile, DefaultText='Profil', LanguageId={x:Static seg:Properties.Language}}" Click="btnProfile_Click">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/icon32_profile.ico"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{Tr Main.Timetable, DefaultText='Terminarz', LanguageId={x:Static seg:Properties.Language}}" Click="btnCalendar_Click" IsEnabled="False">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/icon32_calendar.ico"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="{Tr Main.Messages, DefaultText='Wiadomości', LanguageId={x:Static seg:Properties.Language}}" Click="btnMail_Click" IsEnabled="False">
                                <MenuItem.Icon>
                                    <Image Source="/Resources/icon32_mail.ico"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <!-- searchBar -->
                <TextBox DockPanel.Dock="Top" Margin="1" Padding="30,0,0,0" VerticalContentAlignment="Center" TextChanged="tbSearch_TextChanged">
                    <TextBox.Background>
                        <ImageBrush ImageSource="/Resources/icon32_search.ico" AlignmentX="Left" Stretch="Uniform">
                            <ImageBrush.Transform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=0.2}" Y="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=0.2}"/>
                                </TransformGroup>
                            </ImageBrush.Transform>
                        </ImageBrush>
                    </TextBox.Background>
                </TextBox>
            </DockPanel>
        </Border>
        <!-- main -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Background>
                <SolidColorBrush Color="{Binding config_Main_PanelColor, Source={x:Static p:Settings.Default}}"/>
            </ScrollViewer.Background>
            <WrapPanel x:Name="gridModules" Margin="5" HorizontalAlignment="Center">
                <!-- admin -->
                <Border x:Name="modAdmin" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Admin_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Admin_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Admin_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_admin.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Admin, DefaultText='Admin', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.Console, DefaultText='Konsola', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_code.ico" Click="btnConsoleSQL_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.Console, DefaultText='Konsola', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=admin}"
                                          Click="btnConsoleSQL_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_code.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.Versions, DefaultText='Wersje', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=admin}"
                                          Click="btnVersions_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_versions.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <!--
                                <MenuItem Text="{Tr Main.Community, DefaultText='Społeczność', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=community_preview}"
                                          Icon="/Resources/icon32_community.ico" Click="btnVersions_Click"/>
                                -->
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Admin_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- articles -->
                <Border x:Name="modArticles" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Articles_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Articles_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Articles_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_articles.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Articles, DefaultText='Towary', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnArticlesList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=articles_preview}"
                                          Click="btnArticlesList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.New, DefaultText='Nowy', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=articles_save}"
                                          Click="btnArticlesNew_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_add.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Articles_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- attachments -->
                <Border x:Name="modAttachments" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Attachments_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Attachments_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Attachments_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_photos.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Attachments, DefaultText='Załączniki', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                       FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnAttachmentsList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                                  IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=attachments_preview}"
                                                  Click="btnAttachmentsList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.Gallery, DefaultText='Galeria', LanguageId={x:Static seg:Properties.Language}}"
                                                  IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=attachments_preview}"
                                                  Click="btnAttachmentsGallery_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_gallery.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Attachments_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- attributesClasses -->
                <Border x:Name="modAttributesClasses" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_AttributesClasses_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_AttributesClasses_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_AttributesClasses_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_attributes.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.AttributesClasses, DefaultText='Klasy atrybutów', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnAttributesClassesList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=attributes_classes_preview}"
                                          Click="btnAttributesClassesList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.New, DefaultText='Nowy', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=attributes_classes_save}"
                                          Click="btnAttributesClassesNew_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_add.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_AttributesClasses_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- contractors -->
                <Border x:Name="modContractors" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Contractors_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Contractors_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Contractors_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_contractors.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Contractors, DefaultText='Kontrahenci', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnContractorsList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=contractors_preview}"
                                          Click="btnContractorsList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.New, DefaultText='Nowy', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=contractors_save}"
                                          Click="btnContractorsNew_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_add.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Contractors_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- distributions -->
                <Border x:Name="modDistributions" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Distributions_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Distributions_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Distributions_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_food.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Distributions, DefaultText='Dystrybucje', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnDistributionsList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=distributions_preview}"
                                          Click="btnDistributionsList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.New, DefaultText='Nowy', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=distributions_save}"
                                          Click="btnDistributionsNew_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_add.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Distributions_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- documents -->
                <Border x:Name="modDocuments" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Documents_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Documents_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Documents_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
                        <DockPanel>
                            <Image Margin="5" Source="/Resources/icon32_documents.ico" Height="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=2.5}"/>
                            <Label Margin="1" Content="{Tr Main.Documents, DefaultText='Dokumenty', LanguageId={x:Static seg:Properties.Language}}" VerticalAlignment="Center"
                                   FontWeight="Heavy" FontSize="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=1.25}"/>
                            <sec:Button Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" TextVisibility="False"
                                        ToolTip="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                        Icon="/Resources/icon32_list.ico" Click="btnDocumentsList_Click"/>
                        </DockPanel>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{Tr Main.List, DefaultText='Lista', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=documents_preview}"
                                          Click="btnDocumentsList_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_list.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{Tr Main.New, DefaultText='Nowy', LanguageId={x:Static seg:Properties.Language}}"
                                          IsEnabled="{Binding Source={x:Static g:Global.User}, Path=Perms, Converter={seg:conv_ListContains}, ConverterParameter=documents_save}"
                                          Click="btnDocumentsNew_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/icon32_add.ico"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                    <Border.ContextMenu>
                        <ContextMenu>
                            <sec:ColorSetter Color="{Binding config_Documents_PanelColor, Source={x:Static p:Settings.Default}, Mode=TwoWay}" SliderWidth="256"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                <!-- employees -->
                <Border x:Name="modEmployees" DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top"
                        BorderBrush="{Binding config_Employees_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                        BorderThickness="2" Background="{Binding config_Employees_PanelColor, Source={x:Static p:Settings.Default}}">
                    <Border Margin="5" Width="{Binding Source={x:Static seg:Properties.iSize}, Converter={seg:conv_Size}, ConverterParameter=20}"
                            BorderBrush="{Binding config_Employees_PanelColor, Source={x:Static p:Settings.Default}, Converter={seg:conv_Color}, ConverterParameter=-0.4}"
                            BorderThickness="1" Background="White" MouseRightButtonDown="btnOther_Click">
